<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="Pinjaman Uang Online"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_margin="5sp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:textSize="13sp"
        android:id="@+id/uang_p"
        android:hint="Jumlah Pinjam Uang"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Nama Peminjam"
        android:id="@+id/nama_p"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="13sp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:hint="No. Tlp"
        android:id="@+id/no_p"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:textSize="13sp"
        android:layout_height="wrap_content" />


    <Button
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Pinjam"
        android:id="@+id/cetak"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Tanda Bukti"
        android:id="@+id/tanda"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:id="@+id/cetak_uang"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:id="@+id/cetak_nama"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:id="@+id/cetak_telp"
        android:layout_height="wrap_content" />

</LinearLayout>